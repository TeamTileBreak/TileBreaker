<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uark.csce.tilebreaker" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TileBreakerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_tile_breaker"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".PauseActivity"
            android:label="@string/title_activity_pause" >
        </activity>
        <activity
            android:name=".UpgradeActivity"
            android:label="@string/title_activity_upgrade" >
        </activity>
    </application>

</manifest>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgtile"
    android:layout_weight="0"
    tools:context="edu.uark.csce.tilebreaker.UpgradeActivity">

    <!--Title Bar-->
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/upgrade_rectangle"
    />

    <!--UPGRADES text-->
    <TextView
        android:text="UPGRADES"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
    />

    <!--User Credits-->
    <TextView
        android:text="ยง  0"
        android:textColor="#EEEEEE"
        android:layout_marginTop="60dp"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:width="300dp"
        android:gravity="center"
        android:background="#777777"
        android:textSize="20dp"
    />

    <!--X Button-->
    <ImageButton
        android:id="@+id/xBtn"
        android:background="@drawable/upgradexbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
    />

    <!--Trash Button-->
<!--
    <ImageButton
        android:background="@drawable/upgradetrashbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/xBtn"
        android:layout_toEndOf="@id/xBtn"
        android:layout_marginLeft="5dp"
    />
-->
    <!--Save Changes (Check) Button-->
    <ImageButton
        android:id="@+id/checkBtn"
        android:background="@drawable/upgradecheckbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
    />

    <!--Floppy Disk (Save) Button-->
<!--
    <ImageButton
        android:background="@drawable/upgradesavebtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/checkBtn"
        android:layout_toStartOf="@id/checkBtn"
        android:layout_marginRight="5dp"
    />
-->

    <!--Inventory Bar-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@drawable/upgrade_rectangle"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/inventory1"
            android:background="@drawable/empty_upgrade_slot"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"

            android:text="@string/empty_upgrade_slot"
            android:gravity="center"
            android:textSize="20dp"
        />
        <TextView
            android:id="@+id/inventory2"
            android:background="@drawable/empty_upgrade_slot"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"

            android:text="@string/empty_upgrade_slot"
            android:gravity="center"
            android:textSize="20dp"
        />
        <TextView
            android:id="@+id/inventory3"
            android:background="@drawable/empty_upgrade_slot"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"

            android:text="@string/empty_upgrade_slot"
            android:gravity="center"
            android:textSize="20dp"
            />
    </RelativeLayout>
</RelativeLayout>

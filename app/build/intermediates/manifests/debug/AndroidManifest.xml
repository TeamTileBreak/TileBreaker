<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uark.csce.tilebreaker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="20" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.uark.csce.tilebreaker.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.uark.csce.tilebreaker.TileBreakerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_tile_breaker"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="edu.uark.csce.tilebreaker.PauseActivity"
            android:label="@string/title_activity_pause" >
        </activity>
        <activity
            android:name="edu.uark.csce.tilebreaker.UpgradeActivity"
            android:label="@string/title_activity_upgrade" >
        </activity>
    </application>

</manifest>